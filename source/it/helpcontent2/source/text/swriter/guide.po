"54\n"
"help.text"
msgid "Scrolls up one page."
msgstr "Scorre in alto di una pagina."

#: text_nav_keyb.xhp
msgctxt ""
"text_nav_keyb.xhp\n"
"par_id3148701\n"
"52\n"
"help.text"
msgid "Moves the cursor to the header."
msgstr "Sposta il cursore nell'intestazione."

